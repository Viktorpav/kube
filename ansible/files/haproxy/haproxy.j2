global
    user haproxy
    group haproxy
    daemon
    maxconn 4096
    log /dev/log local0
    log /dev/log local1 notice

defaults
    mode tcp
    timeout connect 10s
    timeout client 50s
    timeout server 50s
    log global

# Kubernetes API Frontend
frontend kubernetes-api
    bind *:6443
    mode tcp
    default_backend kubernetes-backend

# Statistics Frontend
frontend stats
    bind *:9000
    mode http
    stats enable
    stats uri /stats
    stats refresh 5s
    stats auth admin:admin123
    stats hide-version

# Kubernetes API Backend
backend kubernetes-backend
    mode tcp
    balance roundrobin
    option tcp-check
    option log-health-checks
    timeout server 10s
    timeout connect 5s
{% for host in groups['k8s_masters'] %}
server {{ host }} {{ hostvars[host].ansible_default_ipv4.address }}:6443 check inter 2000 rise 2 fall 3
{% endfor %}

# HTTP Ingress Frontend
frontend http_ingress
    bind *:80
    mode http
    default_backend ingress_http_backend

# HTTPS Ingress Frontend  
frontend https_ingress
    bind *:443
    mode tcp
    default_backend ingress_https_backend

# HTTP Ingress Backend
backend ingress_http_backend
    mode http
    balance roundrobin
    option httpchk GET /healthz
    default-server inter 5000 rise 2 fall 3 check
{% for host in groups['k8s_workers'] %}
    server {{ host }} {{ hostvars[host].ansible_default_ipv4.address }}:30080 check
{% endfor %}

# HTTPS Ingress Backend
backend ingress_https_backend
    mode tcp
    balance roundrobin
    option tcp-check
    default-server inter 5000 rise 2 fall 3 check
{% for host in groups['k8s_workers'] %}
    server {{ host }} {{ hostvars[host].ansible_default_ipv4.address }}:30443 check
{% endfor %}